                  mutate(distance = (score-75),
                         modifiedDistance = (1-treat)*abs(score-75))%>%
                  select(c("FIRM", "distance", "INVSALES", "INVTSALES", "INVINTSALES", "treat", "modifiedDistance"))

fullINVSALES <- lm(INVSALES ~ treat + distance , data = fullData)
fullINVTSALES <- lm(INVTSALES ~ treat + distance , data = fullData)
