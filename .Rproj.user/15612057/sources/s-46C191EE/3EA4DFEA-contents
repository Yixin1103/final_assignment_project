fullLargeINVSALES <- lm(INVSALES ~ treat  + snotreat + streat, 
                   data = fullWindowLargeCompanyData)
fullLargeINVTSALES <- lm(INVSALES ~ treat  + snotreat + streat, 
                   data = fullWindowLargeCompanyData)
fullLargeINVINTSALES <- lm(INVINTSALES ~ treat  + snotreat + streat, 
                   data = fullWindowLargeCompanyData)

# Wide window for the large size companies
wideWindowLargeData <- fullWindowLargeCompanyData %>%
  filter(score > 52 & score < 80)

wideLargeINVSALES <- lm(INVSALES ~ treat  + snotreat + streat, 
                   data = wideWindowLargeData)
wideLargeINVTSALES <- lm(INVTSALES ~ treat  + snotreat + streat, 
                   data = wideWindowLargeData)
wideLargeINVINTSALES <- lm(INVINTSALES ~ treat  + snotreat + streat, 
                   data = wideWindowLargeData)

# Narrow window for the large size companies
narrowWindowLargeData <- fullWindowLargeCompanyData %>%
  filter(score > 61 & score < 79)

narrowLargeINVSALES <- lm(INVSALES ~ treat  + snotreat + streat, 
                   data = narrowWindowLargeData)
narrowLargeINVTSALES <- lm(INVTSALES ~ treat  + snotreat + streat, 
                   data = narrowWindowLargeData)
narrowLargeINVINTSALES <- lm(INVINTSALES ~ treat  + snotreat + streat, 
                   data = narrowWindowLargeData)
```

