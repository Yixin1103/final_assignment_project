data <- read_dta(filename)

wideWindowData <- data %>%
                  filter(score >= 52 & score <= 80) %>%
                  mutate(distance = (score-75),
                         modifiedDistance = (1-treat)*abs(score-75))%>%
                  select(c("FIRM", "distance", "INVSALES", "INVTSALES", "INVINTSALES", "treat", "modifiedDistance"))

wideINVSALES <- lm(INVSALES ~ treat + distance , data = wideWindowData)
wideINVTSALES <- lm(INVTSALES ~ treat + distance , data = wideWindowData)
wideINVINTSALES <- lm(INVINTSALES ~ treat + distance , data = wideWindowData)

narrowWindowData <- data %>%
                  filter(score >= 66 & score <= 78) %>%
                  mutate(distance = (score-75),
                         modifiedDistance = (1-treat)*abs(score-75))%>%
                  select(c("FIRM", "distance", "INVSALES", "INVTSALES", "INVINTSALES", "treat", "modifiedDistance"))

narrowINVSALES <- lm(INVSALES ~ treat + distance , data = narrowWindowData)
narrowINVTSALES <- lm(INVTSALES ~ treat + distance , data = narrowWindowData)
narrowINVINTSALES <- lm(INVINTSALES ~ treat + distance , data = narrowWindowData)


